@model IEnumerable<HealthSystemManager.Domain.DTO.PatientDTO>

<h4>Patients</h4>

<table>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.person.Name)</th>
            <th>@Html.DisplayNameFor(model => model.person.IdentityDocument)</th>
            <th>@Html.DisplayNameFor(model => model.person.BirthDate)</th>
            <th>@Html.DisplayNameFor(model => model.person.Phone)</th>
            <th>@Html.DisplayNameFor(model => model.person.Address)</th>
            <th>@Html.DisplayNameFor(model => model.person.City)</th>
            <th>@Html.DisplayNameFor(model => model.MedicalRecords)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.person.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.person.IdentityDocument)</td>
                <td>@Html.DisplayFor(modelItem => item.person.BirthDate)</td>
                <td>@Html.DisplayFor(modelItem => item.person.Phone)</td>
                <td>@Html.DisplayFor(modelItem => item.person.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.person.City)</td>
                <a class="btn btn-outline-success" asp-action="Details" asp-route-id="@item.id">Records</a>
                <td>@Html.DisplayFor(modelItem => item.MedicalRecords)</td>
                <td>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>